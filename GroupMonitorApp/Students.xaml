<Window x:Class="GroupMonitorApp.Students"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Students" Height="300" Width="232">
    <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="ListPanel" >
            <Label Content="Список студентов:" Margin="15,5,15,0"/>
            <TextBox x:Name="addTB" Height="26" Margin="15,5,15,0" TextAlignment="Justify" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Button x:Name="AddStudjBtn" Content="Добавить" Margin="15,5,15,0" VerticalAlignment="Top" Height="24" Click="AddStudBtn_Click"/>

        </StackPanel>
    </ScrollViewer>
</Window>
